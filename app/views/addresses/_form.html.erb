<%= 
input_form(path) do |f|
  f << error_messages_for(:address)
  f << input_table_form do |s|
    s << input_table_row('Label', required_text_field(:address, :label))
    s << input_table_row('Street', std_text_field(:address, :street))
    s << input_table_row('City', std_text_field(:address, :city))
    s << input_table_row('State', std_text_field(:address, :state))
    s << input_table_row('Zipcode', std_text_field(:address, :zipcode))
    s << input_table_row('Start Date', std_text_field(:address, :start_date, readonly: true)) 
    s << input_table_row('End Date', std_text_field(:address, :end_date, readonly: true)) if address.end_date.present?
    s << input_table_row('', submit_and_cancel_buttons('Save', 'Cancel', membership_path(address.membership)))
    s << input_table_row('', loading_spinner)
  end
end
%>

<%= deactivate_reactivate_button_group(address) %>
