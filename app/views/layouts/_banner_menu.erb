<div class=container>
<nav class="navbar navbar-expand-sm navbar-light bg-light">
  <a class="navbar-brand" href="<%= splash_index_path %>">
    <img src="/assets/tracks.png" width="25" height="25" alt="" loading="lazy">
    OSYC
  </a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active"><a class="nav-link" href="<%= memberships_path %>">Home</a></li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"><%= svg_gear %></a>
        <div class="dropdown-menu dropdown-menu-right" >
            <%= dropdown_item_link 'My Account', null_path %>
            <%= dropdown_item_link 'Support', null_path %>
          <%= dropdown_divider %>
          <% if CurrentUser.logged_in? %>
            <%= dropdown_item_link 'Logout', null_path, class: "text-white bg-danger" %>
          <% elsif !is_login_page? %>
            <%= dropdown_item_link 'Login', null_path, class: "text-white bg-primary" %>
          <% end %>
        </div>
      </li>

    </ul>
    <% if CurrentUser.logged_in? && is_splash_page? %>
      <%= form_tag(memberships_path, method: :get, class: 'd-flex flex-row align-items-right flex-wrap', autocomplete: 'off') %>
        <input  id='search_name' name='search[name]' class="mt-3" placeholder="Member Name" >
        <button class="btn btn-outline-success mt-3 mx-1" type="submit">Search</button>
      </form>    
    <% end %>
  </div>
</nav>
</div>
